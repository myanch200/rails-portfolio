
%div{aria: { labelledby: "modal-title" }, role: "dialog", 'aria-modal': "true", class: "relative z-10", data: { controller: "turbo-modal"}}
  %div{class: "fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"}

  %div{class: "fixed inset-0 z-10 overflow-y-auto"}
    %div{class: "flex min-h-full items-end justify-center text-center sm:items-center sm:p-0"}
      %div{class: "relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 w-full max-w-lg max-h-full sm:max-w-2xl sm:w-full sm:p-6"}
        %div{class: "bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4"}
          %div{class: "sm:flex sm:items-start"}
            %div{class: "mt-3 text-center sm:ml-4 sm:mt-0 sm:text-left"}
              %h3.text-base.font-semibold.leading-6.text-gray-900{id: "modal-title"}
                = @title
              .mt-2
                =content
        %div{class: "bg-gray-50 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6"}
          = button_to 'Deactivate', @path, method: :delete, class: "inline-flex justify-center rounded-md bg-red-600 px-4 py-2 text-base font-medium text-white shadow-sm hover:bg-red-700 focus:outline-none sm:ml-3 sm:w-auto", type: "button"
          = button_tag "Cancel", data: { action: "turbo-modal#hideModal" }, type: "button", class: "mt-3 inline-flex justify-center rounded-md bg-white px-4 py-2 text-base font-medium text-gray-900 shadow-sm hover:bg-gray-200 focus:outline-none sm:mt-0 sm:w-auto"
